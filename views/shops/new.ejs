<h1>Add New Shop</h1>

<div class="row">
        <form method="POST" action="/shops" class="col s12">
            <div class="row">
                <div class="row">
                    <div class="input-field col s6">
                        <input id="name" type="text" class="validate" name="name">
                        <label for="name">Name</label>
                    </div>
                </div>
                <div>
                    <div class="input-field col s6">
                        <input id="speciality" type="text" class="validate" name="speciality">
                        <label for="speciality">Speciality</label>
                    </div>
                </div>
                <div>
                    <div class="input-field col s6">
                        <input id="rating" type="range" min="0" max="5" step="0.5" name="rating">
                        <label for="rating">Star Rating</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="address" type="text" class="validate" name="address">
                        <label for="address">Address</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="image" type="url" class="validate" name="image">
                        <label for="image">image URL</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <textarea id="description"  class="validate materialize-textarea" name="description"></textarea>
                        <label for="description">Description</label>
                    </div>
                </div>
                <button class="btn waves-effect waves-light" type="submit" name="action">Sign Up
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </form>
    </div>